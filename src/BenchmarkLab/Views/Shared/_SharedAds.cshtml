<environment names="Development,Staging,Production">
    <div class="ad-container ad-skeleton" id="ad-container">
        <script async type="text/javascript" src="//cdn.carbonads.com/carbon.js?serve=CE7IT277&placement=wwwmeasurethatnet&format=cover" id="_carbonads_js"></script>
    </div>
    <script>
        // Remove skeleton animation when ad loads
        document.addEventListener('DOMContentLoaded', function() {
            var adContainer = document.getElementById('ad-container');
            var checkAdLoaded = function() {
                if (document.getElementById('carbonads')) {
                    adContainer.classList.remove('ad-skeleton');
                    adContainer.style.backgroundColor = 'transparent';
                    adContainer.style.border = 'none';
                } else {
                    setTimeout(checkAdLoaded, 100);
                }
            };
            setTimeout(checkAdLoaded, 500); // Start checking after 500ms
        });
    </script>
</environment>